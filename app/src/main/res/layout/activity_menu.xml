<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C8CF1"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="232dp"
        android:layout_height="606dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <TextView
            android:id="@+id/menu_img_sch"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:drawablePadding="5sp"
            android:text="   SCHOOL\n   ESCAPE"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menu_slow_Btn"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundedbutton"
            android:text="SLOW"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menu_fast_Btn"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundedbutton"
            android:text="FAST"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menu_ss_Btn"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundedbutton"
            android:text="SS"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menu_start_topscore"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundedbutton"
            android:text="Top Score"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>